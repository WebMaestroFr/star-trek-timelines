{
  "name": "star-trek-timelines",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:ts": "tslint --project tsconfig.json -c tslint.json src/**/*.{ts,tsx}",
    "lint:css": "stylelint --formatter verbose src/**/*.{css,scss}",
    "predeploy": "PUBLIC_URL=\"/star-trek-timelines\" yarn build",
    "deploy": "gh-pages -d build",
    "data": "yarn data:compile && yarn data:fetch",
    "data:compile": "tsc --skipLibCheck --esModuleInterop --allowSyntheticDefaultImports --resolveJsonModule src/__scripts__/crew.ts",
    "data:fetch": "node src/__scripts__/crew.js",
    "data:validator": "typescript-json-validator src/types/json.ts PlayerJSON"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "axios": "^0.19.2",
    "axios-cache-adapter": "^2.5.0",
    "classnames": "^2.2.6",
    "react": "^16.13.0",
    "react-bootstrap": "^1.0.0-beta.17",
    "react-dom": "^16.13.0",
    "react-flip-move": "^3.0.4",
    "react-lazyload": "^2.6.5",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.0",
    "@types/jsdom": "^16.1.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-lazyload": "^2.6.0",
    "bootstrap": "^4.4.1",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "jsdom": "^16.5.0",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "stylelint": "^13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "tslint-react": "^4.2.0",
    "typescript": "~3.7.2",
    "typescript-json-validator": "^2.4.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:ts --fix",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "yarn lint:css --fix",
      "git add"
    ],
    "src/**/*.{html,json,md,yml}": [
      "prettier --write **/*.{json,md,yml}",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
